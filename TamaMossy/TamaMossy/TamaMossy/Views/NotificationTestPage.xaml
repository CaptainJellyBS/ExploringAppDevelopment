<?xml version="1.0" encoding="utf-8" ?>
<!--//Code taken from: https://docs.microsoft.com/en-us/xamarin/xamarin-forms/app-fundamentals/local-notifications-->

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TamaMossy.Views.NotificationTestPage">
    <ContentPage.Content>
        <StackLayout Margin="0,35,0,0"
             x:Name="stackLayout">
            <Label Text="Click the button below to create a local test notification."
           TextColor="Red"
           HorizontalOptions="Center"
           VerticalOptions="Start" />
            <Button Text="Create Notification"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Clicked="OnSendClick" />
            <Label Text="Click the button below to schedule a local notification as if the event went off"
           TextColor="Red"
           HorizontalOptions="Center"
           VerticalOptions="Start" />
            <Button Text="Create Notification"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Clicked="OnScheduleClick" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>